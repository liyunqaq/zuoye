@model WebApplication1.ViewModels.EmployeeListViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>@Model.UserName,@Model.Greeting</h2>
    <p>
        <a href="/employee/addNew">新增</a>
        <a href="/employee/DeleteNew">--删除</a>
        <a href="/employee/UpdateNew">--更新</a>
    </p> 
        <form action="/employee/Select" method="post">
        <input type="text" name="name">
        <input type="submit" value="查询">
        </form>
        <hr />
        <div>
            <ul>
                @foreach (var item in Model.EmployeeViewList)
            {
                    <li>@item.EmployeeName,@item.EmployeeSalary,@item.EmployeeGrade<a href="/employee/UpdateNew/@item.EmployeeId">-更新</a><a href="/employee/DelteNew/@item.EmployeeId">-删除</a></li>
                }
            </ul>
        </div>
</body>
</html>
